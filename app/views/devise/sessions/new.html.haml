= image_tag 'Login-page-pic.png', class: 'loginPage'
.container
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :email, class:'font_small'
      %br/
      = f.email_field :email, autocomplete: "email", class: 'text'
    .field
      = f.label :password, class:'font_small'
      %br/
      = f.password_field :password, autocomplete: "current-password", class: 'text'
    -# - if devise_mapping.rememberable?
    -#   .field
    -#     = f.check_box :remember_me
    -#     = f.label :remember_me
    .pageTransition.font_small
      = link_to "Forgot your password?", new_password_path(resource_name)
    .actions_signIn
      = f.submit "LOGIN", class: 'btn-primary'
  .pageTransition.font_small
    = link_to "Sign up?", new_registration_path(resource_name)
